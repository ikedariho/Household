DATABASE名　cupple_fivs

①データベースを作る
create database cupple_fivs;

➁users,man_salary,woman_saralyテーブルを作成(下記SQLを流す)
drop table if exists users cascade;
create table users(id serial primary key,user_id text not null,password text not null,man_name text not null,woman_name text not null,date timestamp not null);
drop table if exists salaries cascade;
create table salaries(id serial primary key,date timestamp not null,user_id text not null,man_salary integer not null,woman_salary integer not null);
drop table if exists living_budgets cascade;
create table living_budgets(id serial primary key,salary_id Integer not null, user_id text not null,date timestamp);
drop table if exists category_names;
create table category_names(id serial primary key,living_budget_id Integer not null, category_name text not null);
drop table if exists category_budgets;
create table category_budgets(id serial primary key,category_name_id Integer not null, budget Integer not null);



